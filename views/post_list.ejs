<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
    <h1>Posts</h1>
    <main>
        <div class="post-feed">
        <% postList.results.forEach(function(post) {%>
            <li>
                <div class="post-container">
                    <div class="post-header-container">
                        <header>
                            <h2 class="username"> <%= post.postedBy.username%></h2>
                            <h2> <%= format(post.createdAt, "dd-MM-yyyy" ) %></h2>
                        </header>
                    </div>
                    <div class="image-container"> 
                        <img src= <%= post.imageUrl %> alt="images uploaded to the post by user" >
                    </div>
                    <div class="post-caption-container"> 
                        <div class="post-caption" aria-label="post caption">
                        <%= post.message %> 
                        </div>
                    </div>
                    <div class="button-container">
                        <div class="like-button">
                            <form action="/posts/<%= post.id %>/like" method="POST">
                            <button type="submit"><i class="fa fa-thumbs-up" style="color: #ffffff;"></i></button>
                            </form>
                        </div>
                        <div class="dislike-button">
                            <form action="/posts/<%= post.id %>/dislike" method="POST">
                            <button type="submit"><i class="fa fa-thumbs-down" style="color: #ffffff;"></i> </button>
                        </form>
                        </div>
                    </div>
                </div>
            </li>
        <% }); %>
        </div>
    </main>
    <nav aria-label="Pagination">
        <ul>
            <li>Page <%= currentPage %></li>
            <% if (hasPreviousPage) %>
                <li><a href="/posts?page= <%= previousPage%>"> Go back</a></li>
            <% if (hasNextPage) %>
                <li><a href="/posts?page= <%= nextPage%>"> Next Page</a></li>
        </ul>
    </nav>
</body>
<%- include('_footer') -%>
</html>